<!DOCTYPE html>
<html>
  <head>
    <title>Moviewars</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>

    <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
      <div class="container">
        <%= link_to "MovieWars", root_path, class: "text-top" %>

        <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
        <li>
          <%= link_to "Myプロフィール", users_show_path, class: "text-top" %>
          </li>
          <li>
            <%= link_to "プロフィール編集", users_edit_path, class: "text-top" %>
            </li>
        <li>
          <%= link_to "投稿一覧",topics_path, class: "text-top" %>
          <li>
            <%= link_to "投稿する", new_topic_path, class: "text-top" %>
            </li>
          <li>
            <%= link_to "いいね一覧", favorites_index_path, class: "text-top" %>
            </li>
          <li>
            <%= link_to "ログアウト", logout_path, method: :delete, class: "text-top" %>
            <% end %>
            </li>


        </ul>
      </div>
      </nav>
    <%= yield %>

    <script>
      $(function () {
        $(".alert").fadeOut(5000);
      });
    </script>

  </body>
</html>
