<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container2">
        <h1 class="text-center text-white">プロフィール編集</h1>

        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :name, class: 'text-white' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email, class: 'text-white' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :プロフィール画像, class: 'text-white' %>
            <% if @user.image? %>
            <%= image_tag @user.image.url, class:"form-control3" %>
            <% else %>
            <%= image_tag "no-image.png", class:"form-control3" %>
            <% end %>
            <%= f.file_field :image, class: 'text-white' %>
          </div>
          <div class="row">
          <div class="col-xs-6 form-group">
            <%= f.label :年齢, class: 'text-white' %>
            <%= f.select :age, [["",""], ["10代","10"], ["20代","20"], ["30代","30"], ["40代","40"], ["50代","50"], ["60代","60"], ["70代以上","70"]], {}, class: 'form-control2' %>
          </div>
          <div class="col-xs-6 form-group">
            <%= f.label :性別, class: 'text-white' %>
            <%= f.select :sex, [["",""], ["女性","女性"], ["男性","男性"]], {}, class: 'form-control2' %>
          </div>
          </div>
          <div class="form-group">
            <%= f.label :新しいパスワード（半角英数字８文字以上）, class: 'text-white' %>
            <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :新しいパスワード（もう一度ご入力ください）, class: 'text-white' %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
              </div>
          <%= f.submit "更新", class: 'btn-block btn-white' %>

<% end %>

        </div>
        </div>
        </div>
        </div>
