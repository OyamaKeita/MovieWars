<div class="topic-index-wrapper">
  <div class="container">
    <%= @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <p class="topic-text">
              <%= topic.title %>
            </p>
            <%= image_tag topic.image.url %>
            <% if !topic.favorite_users.include?(current_user) %>
            <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
            <%= image_tag 'heart-black.png', class: 'topic-index-icon' %>
            <% end %>
            <% else %>
            <%= link_to favorites_destroy_path(topic_id: topic.id), method: :delete do %>
            <%= image_tag 'heart015.png', class: 'topic-index-icon' %>
            <% end %>
            <% end %>
            <%= topic.favorite_users.count %>

            <%= link_to "投稿削除", topic_path, method: :delete, class: "topic-text2" %>

            <h2 class="topic-author">レビュー</h2>
            <p class="topic-text2">
              <%= topic.description %>
            </p>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
