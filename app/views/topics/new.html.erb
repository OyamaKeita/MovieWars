<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">レビューを投稿する</h1>
        <%= form_for @topic do |f| %>
        <div class="form-group">
          <%= f.label :映画タイトル %>
          <%= f.text_area :title, class: 'form-title' %>
        </div>

          <div class="form-group">
            <%= f.label :画像 %>
            <%= f.file_field :image %>
          </div>

          <div class="form-group">
            <%= f.label :レビュー %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
